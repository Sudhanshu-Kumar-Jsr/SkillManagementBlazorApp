@page "/admin/users"
@inject AdminService AdminService
<h3>All Users and Their Skills</h3>
@if (users == null)
{ 
    <p>Loading...</p> 
} 
else 
{
    @foreach (var group in users.GroupBy(u => u.UserEmail))
    {
        <h5 class="mt-4">@group.Key</h5>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>SL No.</th>
                    <th>Skill Name</th>
                    <th>Proficiency Level</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < group.Count(); i++)
                {
                    var skill = group.ElementAt(i);
                    <tr>
                        <td>@(i + 1)</td> 
                        <td>@skill.SkillName</td>
                        <td>@skill.ProficiencyLevel</td>
                    </tr>
                }
            </tbody>
        </table>
    }

}
@code 
{ 
    List<UserSkillView>? users;
    protected override async Task OnInitializedAsync() 
    {
        users = await AdminService.GetAllUsersWithSkills();
    }
 } 
